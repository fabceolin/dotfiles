#!/bin/bash
FILENAME="/tmp/audiocast-$(uuidgen).mp3"
gst-launch pulsesrc device=$(echo "$(cat $(find ~/.pulse/ -name \*default-sink\*)).monitor") ! audio/x-raw-int ! queue ! audioconvert ! lamemp3enc bitrate=8 quality=0 encoding-engine-quality=2 mono=true ! filesink location=$FILENAME &
echo $PID >/tmp/gst-record.pid
echo $FILENAME
echo $FILENAME >/tmp/gst-last
notify-send -t0 "Audio" "$FILENAME"
